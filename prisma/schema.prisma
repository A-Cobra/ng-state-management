// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    userId String @id @default(uuid())

    email String @unique

    username String

    password String

    isLoggedIn Boolean @default(false)

    role String @default("client")

    refresh_token String?
}

model Product {
  idProduct String @id @default(uuid()) @map("id_product")
  productName String @default(uuid()) @map("product_name")
}